<local:CheckableDatePicker 
    x:Class="Imagin.Controls.Common.CheckableMonths"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Imagin.Controls.Common"
    Height="225"
    Width="300"
    x:Name="PART_CheckableMonths">
    <local:CheckableDatePicker.ItemTemplate>
        <DataTemplate>
            <ToggleButton   
                BorderThickness="0" 
                Height="75"
                IsChecked="{Binding IsChecked}"
                Width="75">
                <TextBlock Text="{Binding Mode=OneWay}"/>
            </ToggleButton>
        </DataTemplate>
    </local:CheckableDatePicker.ItemTemplate>
    <local:CheckableDatePicker.ItemsPanel>
        <ItemsPanelTemplate>
            <UniformGrid Columns="4" Rows="3"/>
        </ItemsPanelTemplate>
    </local:CheckableDatePicker.ItemsPanel>
</local:CheckableDatePicker>
