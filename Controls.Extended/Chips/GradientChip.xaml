<UserControl 
    x:Class="Imagin.Controls.Extended.GradientChip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls.Common="clr-namespace:Imagin.Controls.Common;assembly=Imagin.Controls.Common" 
    MinWidth="15" 
    MinHeight="15" 
    Cursor="Hand"
    MouseDown="OnMouseDown" 
    MouseUp="OnMouseUp" 
    MouseDoubleClick="OnMouseDoubleClick"
    x:Name="PART_GradientChip">
    <Controls.Common:CheckerBoard DataContext="{Binding ElementName=PART_GradientChip}" BorderBrush="Black" BorderThickness="1" CheckerForeground="LightGray">
        <Rectangle Fill="{Binding Gradient}"/>
    </Controls.Common:CheckerBoard>
</UserControl>
